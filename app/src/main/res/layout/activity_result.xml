<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quiz.activities.PlayQuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />

            <com.quiz.font.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/the_quiz"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp" />


            <ImageView
                android:id="@+id/imgDashboardIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/dashboard" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/colorSignUp"
            android:textSize="@dimen/_35sdp" />

        <com.quiz.font.TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/colorSignUp"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_90sdp"
        android:background="@drawable/buttonbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">


            <com.quiz.font.TextViewLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/general_knowledge"
                android:textColor="@color/colorDarkGreyText"
                android:textSize="@dimen/_18sdp" />

            <!--Total Questions-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal">

                <com.quiz.font.TextViewLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/total_question"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />

                <com.quiz.font.TextViewLight
                    android:id="@+id/txtTotalQuesValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:text="50"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
            <!--Total Questions-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.quiz.font.TextViewLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/correct_answer"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />

                <com.quiz.font.TextViewLight
                    android:id="@+id/txtCorrectQuesValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:text="30"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>


            <!--Incorrct Questions-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.quiz.font.TextViewLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/in_correct_answer"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />

                <com.quiz.font.TextViewLight
                    android:id="@+id/txtINCorrectQuesValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:text="18"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <!--Skip Questions-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.quiz.font.TextViewLight
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/skip_questions"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />

                <com.quiz.font.TextViewLight
                    android:id="@+id/txtSkiptQuesValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorDarkGreyText"></View>


            <!--Your Score Questions-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.quiz.font.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/your_score"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />

                <com.quiz.font.TextViewMedium
                    android:id="@+id/txtScoreValueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:text="50"
                    android:textColor="@color/colorDarkGreyText"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
